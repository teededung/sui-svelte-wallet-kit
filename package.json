{
	"name": "sui-svelte-wallet-kit",
	"version": "0.8.9",
	"description": "Svelte 5 wallet kit for Sui: connect wallets, manage accounts, SuiNS, balance, sign transactions/messages",
	"author": "Tuan Anh <start@hotmail.com.vn>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/teededung/sui-svelte-wallet-kit.git"
	},
	"homepage": "https://github.com/teededung/sui-svelte-wallet-kit#readme",
	"bugs": {
		"url": "https://github.com/teededung/sui-svelte-wallet-kit/issues"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "pnpm run package",
		"package": "svelte-kit sync && svelte-package",
		"lint:package": "publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"publish:patch": "pnpm version patch && pnpm build && pnpm publish",
		"publish:minor": "pnpm version minor && pnpm build && pnpm publish",
		"publish:major": "pnpm version major && pnpm build && pnpm publish"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./ConnectButton": {
			"types": "./dist/ConnectButton/index.d.ts",
			"svelte": "./dist/ConnectButton/index.js"
		},
		"./ConnectModal": {
			"types": "./dist/ConnectModal/index.d.ts",
			"svelte": "./dist/ConnectModal/index.js"
		},
		"./SuiModule": {
			"types": "./dist/SuiModule/index.d.ts",
			"svelte": "./dist/SuiModule/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.1",
		"@sveltejs/adapter-netlify": "^5.2.4",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.15",
		"svelte": "^5.43.12",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.2.2",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.10"
	},
	"dependencies": {
		"@mysten/enoki": "^0.12.11",
		"@mysten/sui": "^1.45.0",
		"@mysten/wallet-standard": "^0.19.7",
		"@suiet/wallet-sdk": "^0.5.0",
		"@wallet-standard/core": "^1.1.1"
	},
	"keywords": [
		"svelte",
		"svelte5",
		"svelte-kit",
		"sveltekit",
		"sui",
		"sui-wallet",
		"wallet",
		"web3",
		"dapp",
		"wallet-connect",
		"suins"
	],
	"packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c",
	"pnpm": {
		"overrides": {
			"@mysten/sui": "^1.45.0"
		}
	}
}
