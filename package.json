{
	"name": "sui-svelte-wallet-kit",
	"version": "0.8.4",
	"description": "Svelte 5 wallet kit for Sui: connect wallets, manage accounts, SuiNS, balance, sign transactions/messages",
	"author": "Tuan Anh <start@hotmail.com.vn>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/teededung/sui-svelte-wallet-kit.git"
	},
	"homepage": "https://github.com/teededung/sui-svelte-wallet-kit#readme",
	"bugs": {
		"url": "https://github.com/teededung/sui-svelte-wallet-kit/issues"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "yarn run package",
		"package": "svelte-kit sync && svelte-package",
		"lint:package": "publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"publish:patch": "yarn version patch && yarn build && yarn npm publish",
		"publish:minor": "yarn version minor && yarn build && yarn npm publish",
		"publish:major": "yarn version major && yarn build && yarn npm publish"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./ConnectButton": {
			"types": "./dist/ConnectButton/index.d.ts",
			"svelte": "./dist/ConnectButton/index.js"
		},
		"./ConnectModal": {
			"types": "./dist/ConnectModal/index.d.ts",
			"svelte": "./dist/ConnectModal/index.js"
		},
		"./SuiModule": {
			"types": "./dist/SuiModule/index.d.ts",
			"svelte": "./dist/SuiModule/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.37.0",
		"@sveltejs/adapter-vercel": "^6.0.0",
		"@sveltejs/kit": "^2.47.0",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"eslint": "^9.37.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.14",
		"svelte": "^5.40.2",
		"svelte-check": "^4.3.3",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"dependencies": {
		"@mysten/enoki": "^0.12.6",
		"@mysten/sui": "1.42.0",
		"@mysten/wallet-standard": "^0.19.2",
		"@suiet/wallet-sdk": "^0.5.0",
		"@wallet-standard/core": "^1.1.1"
	},
	"keywords": [
		"svelte",
		"svelte5",
		"svelte-kit",
		"sveltekit",
		"sui",
		"sui-wallet",
		"wallet",
		"web3",
		"dapp",
		"blockchain",
		"wallet-connect",
		"suins",
		"sui-balance",
		"transactions",
		"message-signing",
		"typescript",
		"components"
	],
	"packageManager": "yarn@4.9.2"
}
